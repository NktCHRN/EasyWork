{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EasyWork;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtBearer": {
    "Secret": "<yourpasswordhere>",
    "Issuer": "https://localhost:7255",
    "Audience": "https://localhost:7255",
    "Lifetime": 15
  },
  "MailSettings": {
    "Mail": "<fromemail>",
    "DisplayName": "<displayname>",
    "Password": "<yourpasswordhere>",
    "Host": "smtp.gmail.com",
    "Port": 587
  },
  "TokenProvidersSetting": {
    "PasswordResetLifetime": 3,
    "EmailConfirmationLifetime": 48,
    "RefreshTokenLifetimeInDays": 7
  },
  "GoogleAuthSettings": {
    "clientId": "<yourclienid>"
  },
  "AllowedHosts": "*"
}
